<Window x:Name="TextWindow" x:Class="FileViewer.TextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileViewer"
        mc:Ignorable="d"
        Title="TextBox" Height="450" Width="800" Closed="TextWindow_Closed">
    <Grid>
        <Menu x:Name="menu" Margin="0,0,0,-10" >
            <MenuItem x:Name="asd" Header="_File">
                <MenuItem x:Name="save" Header="Save" Click="mentes_Click" IsEnabled="False"/>
            </MenuItem>
            <TextBox x:Name="txtBox" Height="397" TextWrapping="Wrap" Width="778" TextChanged="TextChanged"  />
        </Menu>

    </Grid>
</Window>
